<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/cellbk">


    <TextView
        android:id="@+id/textChatUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:text="Username"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageChatUser"/>

    <ImageView
        android:id="@+id/imageChatUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/fire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textUserSay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="65dp"
        android:layout_marginStart="120dp"
        android:background="@layout/chatsay"
        android:textAlignment="textEnd"
        android:text="!口口口口口口口口？"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textChatUserName"/>

    <TextView
        android:id="@+id/textChatMasterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="Wolf"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@id/textUserSay"
        app:layout_constraintBottom_toTopOf="@id/imageChatMaster"
        app:layout_constraintStart_toEndOf="@+id/imageChatMaster"/>

    <ImageView
        android:id="@+id/imageChatMaster"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/fire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUserSay"/>

    <TextView
        android:id="@+id/textChatMasterSay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="65dp"
        android:paddingBottom="5dp"
        android:background="@layout/chatsay"
        android:textAlignment="textStart"
        android:text="！！！？？？"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textChatMasterName"/>

</androidx.constraintlayout.widget.ConstraintLayout>
